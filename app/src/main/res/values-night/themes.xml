<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ManageMembers" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#fea82f</item>
        <item name="colorPrimaryVariant">#fea82f</item>
        <item name="android:windowBackground">#FBC999</item>
        <item name="android:textColorPrimary">#a35709</item>
        <item name="checkboxStyle">@style/MyCheckBoxStyle</item>
        <item name="editTextStyle">@style/MyEditTextTheme</item>
        <item name="android:textColor">#a35709</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#a35709</item>
        <item name="colorSecondaryVariant">#a35709</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="checkedIconTint">#FFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">#FBC999</item>
    </style>
    <style name="MyCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">#a35709</item>
        <item name="buttonTint">#a35709</item>
        <item name="colorAccent">#a35709</item>
    </style>
    <style name="MyEditTextTheme" parent="Widget.AppCompat.EditText">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#a35709</item>
        <item name="backgroundTint">#7A3E00</item>
        <item name="android:textColor">#a35709</item>
        <item name="android:textColorHint">#9AA35709</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

</resources>